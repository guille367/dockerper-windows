services:
  api:
    build:
      context: C:\Repos\Emi\argenper\docker
      dockerfile: ../back/api/Dockerfile
    container_name: argenper-api
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: api
    ports:
    - published: 8080
      target: 80
    - published: 5000
      target: 5000
    - published: 55995
      target: 55995
  argenper-front:
    command: npm run start
    container_name: argenper-front
    image: node:10.16.3
    ports:
    - published: 3000
      target: 3000
    tty: true
    volumes:
    - C:\Repos\Emi\argenper\front:/argenper/front/:rw
    working_dir: /argenper/front/
  argenper-nginx:
    command:
    - nginx
    - -g
    - daemon off;
    container_name: argenper-nginx
    depends_on:
    - api
    - argenper-front
    image: nginx:alpine
    links:
    - api
    - argenper-front:front
    ports:
    - published: 80
      target: 80
    volumes:
    - C:\Repos\Emi\argenper\docker\configs\dev\nginx.conf:/etc/nginx/nginx.conf:rw
version: '3.4'